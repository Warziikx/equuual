            a(href='#',onclick='showDebt()') 
                #debtA.h-12.w-12.rounded-full.flex.items-center.justify-center.transition.duration-200.ease-in-out(class="hover:shadow-lg")
                    i.text-xl.fas.fa-hand-holding-usd        
