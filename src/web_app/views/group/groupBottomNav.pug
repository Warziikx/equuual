        a(href=`/web/group/${group.id}/spend/new`) 
            .bg-white.shadow.h-12.w-12.rounded-full.text-white.flex.items-center.justify-center.transition.duration-200.ease-in-out(class="hover:shadow-lg")
                i.text-2xl.fas.fa-plus.bg-gradient-to-r.from-eminence-400.to-night-shadz-500.bg-clip-text.text-transparent
